function returnModelInit(actif){
    intervalle = actif.split("-");
    inter1 = intervalle[1];
    // print inter1; 
    if (intervalle.size == 2) {
        inter2 = intervalle[2].trim();
        // print inter2; 
        model @inter1 - @inter2;
    }
    else { 
        model @inter1;
    }
}

function getFileHeader(modID) {
    if (checkModID(modID)) {
        actif = _modelNumber;
        model @modID;
        entete =(getProperty('fileHeader'));
        returnModelInit(actif);
        return entete; 
    }
    else {
        return "";
    }  

}


